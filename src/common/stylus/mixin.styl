no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

title()
    color $color-theme
    font-size $font-size-medium
    padding 15px 20px
    border-bottom 1px solid  $color-border
.select-wrapper
    height 18px
    line-height 18px
    padding 15px 20px
    display flex
    font-size $font-size-medium
    border-bottom 1px solid  $color-border
    .text
        flex 1
    .desc
        flex 0 0 122px
        text-align right
        padding-right 20px
        color $color-theme
    .icon
        flex 0 0 16px
        color $color-icon-right
        font-size $font-size-medium-x

.input-wrapper
    height 18px
    line-height 18px
    padding 15px 20px
    display flex
    font-size $font-size-medium
    border-bottom 1px solid  $color-border
    .text
        flex 0 0 90px
    input 
        flex 1
        outline none
            