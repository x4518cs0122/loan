
.self-form-item 
  height: 40px;
  min-height: 40px;
  .cube-form-label 
    font-size: 12px;
    color: rgba(0, 0, 0, 0.8);
  /** 自定义date-picker的右箭头样式 */
  .date-picker-btn
    &.cube-btn  
      background: #fff;
      color: rgba(0, 0, 0, 0.6);
      text-align: right;
      padding: 10px;
  /** 自定义表单提交按钮样式 */
  .self-submit-btn
    &.cube-btn  
      background: #f56c6c;
      color: #fff;
      text-align: center;
      padding: 10px;
  .cube-input  
    input  
      padding: 10px 0;
.cube-form-group-legend 
  font-size: 12px !important;
  padding: 5px 20px;
     
   
 